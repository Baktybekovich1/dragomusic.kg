{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="public/css/muz_list.css">
{% endblock %}
{% block body %}
    <div class="wrapper">

        <div class="main">
            <div class="music-list">
                <h2>Список песен</h2>
                <table>
                    <thead>
                    <th>Название</th>
                    <th>Исполнитель</th>
                    <th>Дата</th>
                    <th>Воспроизвести</th>

                    </thead>
                    <tbody>
                    {% for music in musics %}
                        <tr>
                            <td>{{ music.name }}</td>
                            <td>{{ music.artist }}</td>
                            <td>{{ music.dateString }}</td>
                            <td>
                                <a class="play-button" type="button" href="{{ path('app_index_music',{'muz': music.id}) }}"
                                   >▶</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <footer>
            {% if muzname != null %}
                <div class="player">
                    <h2>Проигрыватель</h2>
                    <audio controls autoplay>
                        <source src="/uploads/{{ muzname.text }}" type="audio/mpeg">
                    </audio>
                </div>
            {% else %}
                <h2>Музыка не выбрана</h2>

            {% endif %}


            <p>&copy; 2023 Моя Музыка. Все права защищены.</p>
        </footer>
    </div>
{% endblock %}



